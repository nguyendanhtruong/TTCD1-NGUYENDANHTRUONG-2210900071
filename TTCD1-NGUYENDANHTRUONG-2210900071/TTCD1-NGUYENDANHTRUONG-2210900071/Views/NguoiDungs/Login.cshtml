@model TTCD1_NGUYENDANHTRUONG_2210900071.Models.NguoiDung

@{
    ViewBag.Title = "Đăng Nhập";
}

<h2>Đăng Nhập</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@using (Html.BeginForm("Login", "NguoiDungs", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", required = "required" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MatKhau, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", placeholder = "Mật Khẩu", required = "required" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Vai Trò", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Role", new SelectList(new List<SelectListItem>
            {
                new SelectListItem { Text = "Người dùng", Value = "User" },
                new SelectListItem { Text = "Admin", Value = "Admin" }
            }, "Value", "Text"), "Chọn vai trò", new { @class = "form-control", required = "required" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Đăng Nhập" class="btn btn-default" />
        </div>
    </div>
}

<div>
    <p>Bạn chưa có tài khoản? <a href="@Url.Action("Register", "NguoiDungs")">Đăng ký ngay</a></p>
</div>
