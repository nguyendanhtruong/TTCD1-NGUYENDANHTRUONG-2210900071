@model List<TTCD1_NGUYENDANHTRUONG_2210900071.Models.GioHang>

<h2>Xác nhận thanh toán</h2>

<table>
    <thead>
        <tr>
            <th>Hình ảnh</th>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@Url.Content("~/Images/" + item.SanPham.HinhAnh)" alt="@item.SanPham.TenSanPham" style="width: 100px;" /></td>
                <td>@item.SanPham.TenSanPham</td>
                <td>@item.SoLuong</td>
                <td>@item.SanPham.Gia.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<p>Tổng tiền: @Model.Sum(item => item.SanPham.Gia * item.SoLuong).ToString("C")</p>

<form action="@Url.Action("Checkout", "GioHangs")" method="post">
    <input type="submit" value="Xác nhận thanh toán" class="btn btn-primary" />
</form>
