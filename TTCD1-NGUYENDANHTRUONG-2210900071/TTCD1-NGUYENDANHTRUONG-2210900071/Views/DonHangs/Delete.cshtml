@model TTCD1_NGUYENDANHTRUONG_2210900071.Models.DonHang

<h2>Xóa Đơn Hàng</h2>

<p>Bạn có chắc chắn muốn xóa đơn hàng này không?</p>

<table class="table">
    <tr>
        <th>Ngày đặt</th>
        <td>@Model.NgayDat?.ToString("dd/MM/yyyy")</td>
    </tr>
    <tr>
        <th>Tổng tiền</th>
        <td>@Model.TongTien.ToString("C")</td>
    </tr>
    <tr>
        <th>Trạng thái</th>
        <td>@Model.TrangThai</td>
    </tr>
</table>

@using (Html.BeginForm("Delete", "DonHangs", FormMethod.Post))
{
    @Html.AntiForgeryToken() <!-- Thêm token bảo mật -->
    <input type="hidden" name="id" value="@Model.ID" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-default" })
}
