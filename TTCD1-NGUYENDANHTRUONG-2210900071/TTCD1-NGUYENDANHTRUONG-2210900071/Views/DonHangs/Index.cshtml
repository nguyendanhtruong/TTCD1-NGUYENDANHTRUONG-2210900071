@model List<TTCD1_NGUYENDANHTRUONG_2210900071.Models.DonHang>

<h2>Danh sách đơn hàng của bạn</h2>

@if (Model != null && Model.Any())
{
    <!-- Hiển thị bảng danh sách đơn hàng -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var donHang in Model)
            {
                <tr>
                    <td>@donHang.NgayDat?.ToString("dd/MM/yyyy")</td> <!-- Hiển thị ngày đặt -->
                    <td>@donHang.TongTien.ToString("C")</td> <!-- Hiển thị tổng tiền -->
                    <td>@donHang.TrangThai</td> <!-- Hiển thị trạng thái -->
                    <td>
                        <!-- Liên kết đến chi tiết đơn hàng -->
                        <a href="@Url.Action("Details", "DonHangs", new { id = donHang.ID })" class="btn btn-info">Xem chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <!-- Nếu không có đơn hàng nào -->
    <p>Hiện tại bạn chưa có đơn hàng nào!</p>
}
