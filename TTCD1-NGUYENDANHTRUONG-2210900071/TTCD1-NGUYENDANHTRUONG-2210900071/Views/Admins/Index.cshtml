@{
    ViewBag.Title = "Admin Dashboard";
}

<h2>Trang quản lý Admin</h2>

<div class="dashboard">
    <div class="card">
        <h3>Quản lý sản phẩm</h3>
        <p>@Html.ActionLink("Xem tất cả sản phẩm", "Index", "SanPhams")</p>
        <p>@Html.ActionLink("Thêm sản phẩm mới", "Create", "SanPhams")</p>
    </div>
    <div class="card">
        <h3>Quản lý người dùng</h3>
        <p>@Html.ActionLink("Xem tất cả người dùng", "Index", "NguoiDungs")</p>
        <p>@Html.ActionLink("Thêm người dùng mới", "Create", "NguoiDungs")</p>
    </div>
    <div class="card">
        <h3>Quản lý đơn hàng</h3>
        <p>@Html.ActionLink("Xem tất cả đơn hàng", "Index", "DonHangs")</p>
    </div>
</div>

<style>
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f0f2f5;
    margin: 0;
    padding: 20px;
}

.dashboard {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin-top: 20px;
}

.card {
    background: #ffffff;
    border-radius: 8px;
    padding: 20px;
    width: 250px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

.card h3 {
    margin-bottom: 15px;
    color: #333;
}

.card p {
    margin: 5px 0;
    color: #007bff;
    font-weight: bold;
}

.card p a {
    text-decoration: none;
    color: #007bff;
    transition: color 0.2s;
}

.card p a:hover {
    color: #0056b3;
}

@**@media (max-width: 600px) {
    .dashboard {
        flex-direction: column;
        align-items: center;
    }
}

</style>
