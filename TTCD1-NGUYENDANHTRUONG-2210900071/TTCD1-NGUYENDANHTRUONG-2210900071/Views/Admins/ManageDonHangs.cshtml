@model IEnumerable<TTCD1_NGUYENDANHTRUONG_2210900071.Models.SanPham>

<h2>Quản lý sản phẩm</h2>
<table class="table">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Số lượng</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenSanPham</td>
                <td>@item.Gia</td>
                <td>@item.SoLuong</td>
                <td>
                    @Html.ActionLink("Sửa", "EditSanPham", new { id = item.ID }) |
                    @Html.ActionLink("Xóa", "DeleteSanPham", new { id = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("CreateSanPham")" class="btn btn-primary">Thêm sản phẩm mới</a>
