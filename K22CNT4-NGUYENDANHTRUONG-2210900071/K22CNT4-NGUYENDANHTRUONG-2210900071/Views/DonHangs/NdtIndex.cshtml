﻿<h2>Danh Sách Đơn Hàng</h2>

<table class="table table-striped table-bordered" style="width: 100%; border: 1px solid #ddd;">
    <thead>
        <tr style="background-color: #f8f9fa; text-align: center;">
            <th>ID</th>
            <th>Ngày Đặt</th>
            <th>Người Dùng</th>
            <th>Trạng Thái</th>
            <th>Tổng Tiền</th>
            <th>Thao Tác</th> 
        </tr>
    </thead>
    <tbody>
        @foreach (var donHang in Model)
        {
            <tr>
                <td style="text-align: center;">@donHang.ID</td>
                <td>@donHang.NgayDat.ToShortDateString()</td>
                <td>@donHang.ID_NguoiDung</td>
                <td>@donHang.TrangThai</td>
                <td>@donHang.TongTien.ToString("C0")</td> <!-- Hiển thị tổng tiền với định dạng tiền tệ -->
                <td>
                    @Html.ActionLink("Chi Tiết", "NdtDetails", new { id = donHang.ID }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Sửa", "NdtEdit", new { id = donHang.ID }, new { @class = "btn btn-warning btn-sm" }) |
                    @using (Html.BeginForm("NdtDelete", "DonHangs", new { id = donHang.ID }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa đơn hàng này?');">Xóa</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<p>@Html.ActionLink("Bắt Đầu Mua", "NdtIndex", "SanPhams", null, new { @class = "btn btn-primary" })</p>