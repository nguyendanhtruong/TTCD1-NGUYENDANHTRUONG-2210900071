    <style>
      /* Cài đặt chung */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f8f9fa;
}

/* Thanh điều hướng */
header {
    background-color: #2d2d2d;
    color: white;
    padding: 15px 0;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

.navbar .logo h1 {
    margin: 0;
    font-size: 24px;
    font-weight: bold;
}

.navbar nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
}

.navbar nav ul li {
    margin: 0 15px;
}

.navbar nav ul li a {
    color: #f8f9fa;
    text-decoration: none;
    font-size: 16px;
    padding: 8px 15px;
    transition: background-color 0.3s;
}

.navbar nav ul li a:hover {
    background-color: #555;
    border-radius: 4px;
}

.hamburger {
    display: none;
    font-size: 24px;
    cursor: pointer;
    margin-left: 20px;
}

/* Banner */
.banner {
    overflow: hidden;
    position: relative;
    width: 90%;
    max-width: 1200px;
    height: 400px;
    margin: 20px auto;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

.banner-slider {
    display: flex;
    transition: transform 1s ease;
    width: 100%;
    height: 100%;
}

.banner-slider img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    flex-shrink: 0;
}

/* Danh mục và sản phẩm */
.categories, .featured-products {
    max-width: 1200px;
    margin: 30px auto;
    padding: 0 20px;
}

.categories h2, .featured-products h2 {
    text-align: center;
    font-size: 28px;
    color: #333;
    margin-bottom: 30px;
}

.category-list, .product-list {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.category-item, .product-item {
    background-color: white;
    padding: 20px;
    margin: 15px;
    border: 1px solid #ddd;
    border-radius: 10px;
    text-align: center;
    width: calc(25% - 20px);
    transition: transform 0.3s, box-shadow 0.3s;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

.category-item:hover, .product-item:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

.category-item img, .product-item img {
    width: 100%;
    height: auto;
    border-radius: 8px;
}

.product-item h3 {
    margin: 15px 0;
    color: #333;
}

.product-item p {
    color: #777;
    font-weight: bold;
}

.product-item button {
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 5px;
    transition: background-color 0.3s;
}

.product-item button:hover {
    background-color: #0056b3;
}

/* Footer */
footer {
    background-color: #2d2d2d;
    color: white;
    text-align: center;
    padding: 15px;
    margin-top: 40px;
    font-size: 14px;
}

footer a {
    color: #007bff;
    text-decoration: none;
}

footer a:hover {
    text-decoration: underline;
}

/* Media Queries cho responsive */
@**@media (max-width: 768px) {
    .navbar {
        flex-direction: column;
        align-items: center;
    }

    .navbar nav ul {
        flex-direction: column;
        align-items: center;
    }

    .category-item, .product-item {
        width: calc(100% - 20px);
    }

    .hamburger {
        display: block;
    }

    #menu-list {
        display: none;
        flex-direction: column;
    }

    #menu-list li {
        margin: 10px 0;
    }
}

@**@media (max-width: 1024px) and (min-width: 769px) {
    .category-item, .product-item {
        width: calc(50% - 20px);
    }
}

    </style>
</head>

<body>
