    <script>
        // JavaScript để chuyển động banner
        const bannerSlider = document.querySelector('.banner-slider');
        let currentIndex = 0;

        function slideBanners() {
            currentIndex++;
            if (currentIndex >= bannerSlider.children.length) {
                currentIndex = 0;
            }
            bannerSlider.style.transform = `translateX(-${currentIndex * 100}%)`;
        }

        setInterval(slideBanners, 4000); // Chuyển banner sau mỗi 3 giây

        // JavaScript cho nút hamburger trên mobile
        const hamburgerMenu = document.getElementById('hamburger-menu');
        const menuList = document.getElementById('menu-list');

        hamburgerMenu.addEventListener('click', function () {
            menuList.style.display = menuList.style.display === 'flex' ? 'none' : 'flex';
        });
    </script>
</body>

</html>
