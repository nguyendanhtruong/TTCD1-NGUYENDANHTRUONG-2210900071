@model IEnumerable<K22CNT4_NGUYENDANHTRUONG_2210900071.Models.SanPham>

<h2>Trang Sản Phẩm </h2>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #e9ecef;
        margin: 0;
        padding: 0;
    }

    .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #343a40;
        padding: 15px 30px;
        color: white;
    }

        .navbar .logo-filter {
            display: flex;
            align-items: center;
        }

        .navbar h1 {
            font-size: 24px;
            margin: 0;
        }

        .navbar form {
            display: inline-block;
            margin-left: 20px;
        }

            .navbar form label {
                color: white;
                font-size: 16px;
                margin-right: 5px;
            }

            .navbar form select {
                padding: 5px;
                font-size: 16px;
            }

        .navbar ul {
            list-style: none;
            display: flex;
            margin: 0;
            padding: 0;
        }

            .navbar ul li {
                margin: 0 10px;
            }

                .navbar ul li a {
                    color: white;
                    text-decoration: none;
                    font-size: 16px;
                    padding: 5px 10px;
                    transition: color 0.3s ease;
                }

                    .navbar ul li a:hover {
                        color: #007bff;
                    }

    .banner {
        width: 100%;
        height: 300px;
        overflow: hidden;
        margin-bottom: 20px;
    }

        .banner img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .header {
        display: flex;
        justify-content: flex-end;
        margin: 20px;
    }

        .header a {
            background-color: #007bff;
            color: white;
            padding: 8px 15px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

            .header a:hover {
                background-color: #0056b3;
            }

    .product-list {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        padding: 20px;
        justify-content: center;
    }

    .product-item {
        width: 100%;
        max-width: 280px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 15px;
        margin: 10px;
    }

        .product-item img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }

    .product-info {
        text-align: center;
        margin: 15px 0;
    }

        .product-info h3 {
            font-size: 20px;
            color: #333;
            margin: 0;
        }

        .product-info p {
            font-size: 16px;
            color: #777;
            margin: 5px 0;
        }

        .product-info .category {
            font-size: 14px;
            color: #555;
            font-style: italic;
        }

    .product-actions {
        display: flex;
        justify-content: space-between;
        width: 100%;
        margin-top: 10px;
    }

        .product-actions a {
            background-color: #28a745;
            color: white;
            padding: 8px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 14px;
            text-align: center;
            width: 48%;
            transition: background-color 0.3s ease;
        }

            .product-actions a:hover {
                background-color: #218838;
            }

