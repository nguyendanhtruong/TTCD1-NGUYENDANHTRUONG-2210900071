<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        /* Cấu trúc chung */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        h2 {
            text-align: center;
            margin-top: 20px;
            font-size: 32px;
        }

        /* Header */
        header {
            background-color: #343a40;
            color: white;
            padding: 20px 0;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 30px;
        }

        .logo h1 {
            margin: 0;
            font-size: 26px;
        }

        .logo-filter form {
            display: flex;
            align-items: center;
        }

            .logo-filter form label {
                color: white;
                margin-right: 10px;
            }

            .logo-filter form input,
            .logo-filter form button {
                padding: 8px;
                margin-left: 5px;
            }

        .navbar nav ul {
            list-style: none;
            display: flex;
            padding: 0;
        }

            .navbar nav ul li {
                margin: 0 15px;
            }

                .navbar nav ul li a {
                    text-decoration: none;
                    color: white;
                    font-size: 16px;
                }

                    .navbar nav ul li a:hover {
                        color: #007bff;
                    }

        /* Banner */
        .banner {
            margin-top: 20px;
        }

            .banner img {
                width: 100%;
                height: auto;
            }

        /* Giỏ hàng */
        .header {
            text-align: right;
            margin-top: 10px;
            margin-right: 30px;
        }

            .header a {
                background-color: #007bff;
                color: white;
                padding: 10px 20px;
                border-radius: 5px;
                text-decoration: none;
            }

                .header a:hover {
                    background-color: #0056b3;
                }

        /* Danh sách sản phẩm */
        .product-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            padding: 30px;
        }

        .product-item {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .product-item:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

            .product-item img {
                width: 100%;
                height: 200px;
                object-fit: cover;
            }

        .product-info {
            padding: 15px;
            text-align: center;
        }

            .product-info h3 {
                font-size: 20px;
                margin: 10px 0;
            }

            .product-info p {
                font-size: 16px;
                color: #777;
                margin: 5px 0;
            }

        .product-actions {
            padding: 15px;
            text-align: center;
            background-color: #f8f9fa;
            display: flex;
            justify-content: space-around;
            align-items: center;
        }

            .product-actions a {
                text-decoration: none;
                background-color: #28a745;
                color: white;
                padding: 8px 16px;
                border-radius: 5px;
                margin: 0 10px;
                transition: background-color 0.3s ease;
                width: 45%;
                text-align: center;
            }

                .product-actions a:hover {
                    background-color: #218838;
                }

                .product-actions a:last-child {
                    background-color: #007bff;
                }

                    .product-actions a:last-child:hover {
                        background-color: #0056b3;
                    }

            .product-actions .cart-icon {
                font-size: 18px;
            }
    </style>
</head>

<body>
    <h2>Trang Sản Phẩm</h2>

    <header>
        <div class="navbar">
            <div class="logo-filter">
                <div class="logo">
                    <h1>Shop Quần Áo</h1>
                </div>

                <!-- Thanh Tìm Kiếm -->
                <form method="get" action="@Url.Action("NdtIndex", "NdtSanPhams")">
                    <label for="search">Tìm kiếm sản phẩm:</label>
                    <input type="text" name="search" id="search" placeholder="Tìm kiếm..." value="@Request.QueryString["search"]" />
                    <button type="submit">Tìm</button>
                </form>

                <form method="get" action="@Url.Action("NdtIndex", "NdtSanPhams")">
                    <label for="DanhMucList">Lọc theo danh mục:</label>
                    @Html.DropDownList("categoryId", (SelectList)ViewBag.DanhMucList, "Tất cả", new { onchange = "this.form.submit();" })
                </form>
            </div>

            <nav>
                <ul id="menu-list">
                    <li>@Html.ActionLink("Trang chủ", "NdtIndex", "NdtHome")</li>
                    <li>@Html.ActionLink("Sản Phẩm", "NdtIndex", "NdtSanPhams")</li>
                    <li>@Html.ActionLink("Giỏ hàng", "NdtIndex", "NdtGioHangs")</li>
                    <li>@Html.ActionLink("Đăng nhập", "NdtLogin", "NdtNguoiDungs")</li>
                </ul>
            </nav>
        </div>
    </header>

    <div class="banner">
        <img src="@Url.Content("~/Images/1.jpg")" alt="Banner Shop" />
    </div>

    <div class="header">
        <a href="@Url.Action("NdtIndex", "NdtGioHangs")">Xem giỏ hàng</a>
    </div>

    <div class="product-list">
        @foreach (var sanPham in Model)
        {
            <div class="product-item">
                <img src="@Url.Content("~/Images/" + sanPham.HinhAnh)" alt="@sanPham.TenSanPham" />

                <div class="product-info">
                    <h3>@sanPham.TenSanPham</h3>
                    @using System.Globalization
                    <p>Giá: @sanPham.Gia.ToString("C0", new CultureInfo("vi-VN"))</p>
                    <p class="category">
                        Danh mục: @(sanPham.DanhMuc != null ? sanPham.DanhMuc.TenDanhMuc : "Không có danh mục")
                    </p>
                </div>

                <div class="product-actions">
                    <a href="@Url.Action("NdtAddToCart", "NdtSanPhams", new { id = sanPham.ID })">
                        <i class="fas fa-cart-plus cart-icon"></i>
                    </a>
                    <a href="@Url.Action("NdtDetails", "NdtSanPhams", new { id = sanPham.ID })"> Chi tiết </a>
                </div>
            </div>
        }
    </div>
</body>
